<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_above="@+id/navigation"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/milkWhite">

                <RelativeLayout
                    android:id="@+id/layoutHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/bottom_line_bg">

                    <ImageView
                        android:id="@+id/imgSideMenu"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:onClick="sideMenu"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/side_menu"/>

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/headerTitle"
                        android:textSize="17sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/imgSideMenu"
                        android:layout_toLeftOf="@+id/imgSearch"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dinpromedium"
                        android:gravity="center_vertical" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_toLeftOf="@+id/imgSearch"
                        android:layout_marginRight="5dp">
                        <include
                            android:id="@+id/searchLayout"
                            layout="@layout/search_layout"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <CheckBox
                        android:id="@+id/imgSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:background="@drawable/ic_search"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_toLeftOf="@+id/imgChooseLang"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgWhatsApp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_whatsapp_logo"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_toLeftOf="@+id/imgChooseLang"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imgChooseLang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_choose_language"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutHeader"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                            android:id="@+id/youtube_player_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:showYouTubeButton="false"
                            app:showFullScreenButton="false"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recommendedLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_courses"
                            android:textColor="@color/muted_blue"
                            android:fontFamily="@font/dinprobold"
                            android:textAllCaps="true"
                            android:textSize="17sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp">

                            <com.hamstechonline.utils.WrapContentViewPager
                                android:id="@+id/listTopicsRecommended"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:overScrollMode="never"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>

                            <ImageView
                                android:id="@+id/mycoursePrevious"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="105dp"
                                android:src="@drawable/ic_left_arrow" />

                            <ImageView
                                android:id="@+id/mycourseNext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="105dp"
                                android:src="@drawable/ic_right_arrow"
                                android:layout_alignParentRight="true" />

                        </RelativeLayout>

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/otherEnglishListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/most_popular_courses"
                        android:textColor="@color/muted_blue"
                        android:fontFamily="@font/dinprobold"
                        android:textSize="17sp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="@string/_6_month_online_government_certified_courses_to_make_your_hobby_a_skill_and_a_business"
                        android:layout_marginTop="7dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:id="@+id/listPopularCourses">
                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_courses"
                        android:textColor="@color/muted_blue"
                        android:fontFamily="@font/dinprobold"
                        android:textSize="17sp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:layout_marginTop="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/listCourse"
                            android:layout_marginTop="265dp"
                            android:visibility="gone"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:background="@drawable/border_pink_gray_strok" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:id="@+id/listRecommended"/>


                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/imgExpand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/up_arrow"
                        android:layout_gravity="right"
                        android:layout_marginTop="7dp"
                        android:visibility="gone"/>

                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/otherHindiListLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sixMonths"
                            android:textAllCaps="true"
                            android:layout_marginTop="7dp"
                            android:textColor="@color/muted_blue"
                            android:fontFamily="@font/dinprobold"
                            android:textSize="17sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="@string/_6_month_online_government_certified_courses_to_make_your_hobby_a_skill_and_a_business"
                            android:layout_marginTop="7dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:id="@+id/listCategory">
                        </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:id="@+id/listHindi"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp">
                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:orientation="vertical"
                        android:background="@drawable/curved_bg_pink"
                        android:layout_marginTop="5dp"
                        android:paddingTop="20dp"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="-8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/successStories"
                            android:textColor="@color/muted_blue"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:layout_marginLeft="30dp"
                            android:paddingTop="8dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="255dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="16dp">

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/imageSlider"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:overScrollMode="never"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>

                            <ImageView
                                android:id="@+id/imgPrevious"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="130dp"
                                android:src="@drawable/ic_left_arrow" />

                            <ImageView
                                android:id="@+id/imgNext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="130dp"
                                android:src="@drawable/ic_right_arrow"
                                android:layout_alignParentRight="true" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="215dp"
                        android:orientation="vertical"
                        android:paddingTop="20dp"
                        android:background="@drawable/curved_bg_pink"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="-8dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/want_to_be_a_part_of_the_hunar_club"
                            android:textColor="@color/muted_blue"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:paddingLeft="23dp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/get_daily_diy_videos_look_at_student_designs_amp_feature_nyour_own_creation_and_win_contest_prizes"
                            android:textColor="@color/black_two"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:paddingLeft="23dp"
                            android:layout_marginTop="8dp"/>

                        <ImageView
                            android:id="@+id/gifSuccessStory"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="4dp"
                            android:paddingLeft="23dp"
                            android:paddingRight="23dp"
                            android:src="@drawable/join_hunar" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/popular_lessons"
                            android:textColor="@color/muted_blue"
                            android:fontFamily="@font/dinprobold"
                            android:textSize="17sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="7dp"
                            android:text="@string/short_and_trending_certified_courses_to_help_you_design_unique_products"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:id="@+id/listMiniLessons">
                        </androidx.recyclerview.widget.RecyclerView>

                        <CheckBox
                            android:id="@+id/txtSeeMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_more"
                            android:textColor="@color/white"
                            android:fontFamily="@font/dinprobold"
                            android:textSize="15sp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/blue_button_bg"
                            android:layout_marginTop="10dp"
                            android:button="@null"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:orientation="vertical"
                        android:background="@drawable/curved_bg_pink"
                        android:paddingTop="40dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginRight="-8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_marginTop="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/muted_blue"
                            android:text="@string/your_celebrity_mentor"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="@string/learn_from_bollywood_s_top_fashion_designer_neeta_lulla_and_get_certified_by_her_too"/>

                        <ImageView
                            android:id="@+id/imgMentorImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/footer_ribbon"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scaleType="fitXY"/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/club_icon"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent">

            <FrameLayout
                android:id="@+id/footer_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layoutHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_home_black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblHome"
                        android:fontFamily="sans-serif"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imgHunarClub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hunarclub_selected" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hunar Club"
                        android:fontFamily="sans-serif"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/contact_us"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contactUs"
                        android:fontFamily="sans-serif"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/stickyWhatsApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_whatsapp_circle"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="7dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:visibility="visible">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navSideMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>