<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/hunar_logo"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif"
                android:text="@string/chooseLanguage"
                android:textColor="@color/dark_grey_blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_pink"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/chooseLanguage_hindi"
                android:textColor="@color/dark_grey_blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/chbEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="English"
                android:textColor="@color/dark_pink"
                android:fontFamily="sans-serif"
                android:textSize="25sp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:textStyle="bold"
                android:background="@drawable/checkbox_english_text"
                android:layout_gravity="center_horizontal"/>

            <CheckBox
                android:id="@+id/chbHindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="हिंदी"
                android:textColor="@color/muted_blue"
                android:fontFamily="sans-serif"
                android:textSize="25sp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:textStyle="bold"
                android:background="@drawable/checkbox_hindi_text"
                android:layout_gravity="center_horizontal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listLanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="20dp">
            </androidx.recyclerview.widget.RecyclerView>


            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblNext"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/dinprobold"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_shape_orange"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>